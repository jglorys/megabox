<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.megabox.admin.schedule.dao.ScheduleDAO">
 	<insert id="insertSchedule" parameterType="map">
 		INSERT INTO `schedule`
 		(
 		`movieId`
		,`movieTitle`
		,`auditoriumId`
		,`auditoriumName`
		,`time`
		,`createdAt`
		,`updatedAt`
 		)
 		VALUES
 		(
 		#{movieId}
 		, #{movieTitle}
 		, #{auditoriumId}
 		, #{auditoriumName}
 		, #{time}
 		, NOW()
 		, NOW()
 		)
 	</insert>
 	<select id="selectScheduleList" resultType="com.megabox.admin.schedule.model.Schedule">
 		SELECT
 			`id`
	 		,`movieId`
			,`movieTitle`
			,`auditoriumId`
			,`auditoriumName`
			,`time`
			,`createdAt`
			,`updatedAt`
 		FROM 
 			`schedule`
 	</select>
 	
 	<select id="selectScheduleByMovieId" resultType="com.megabox.admin.schedule.model.Schedule" parameterType="int">
 		SELECT
 			`id`
	 		,`movieId`
			,`movieTitle`
			,`auditoriumId`
			,`auditoriumName`
			,`time`
			,`createdAt`
			,`updatedAt`
 		FROM 
 			`schedule`
 		WHERE
 			`movieId` = #{movieId}
 	</select>
</mapper> 	
 
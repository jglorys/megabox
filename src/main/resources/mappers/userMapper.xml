<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.megabox.user.dao.UserDAO">
	<select id="existLoginId" parameterType="string" resultType="boolean">
		SELECT
			count(1)
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
	</select>
	
	<insert id="insertNewUser" parameterType="map">
		INSERT INTO `user`
		(	
			`loginId`
			,`name`
			,`yyyymmdd`
			,`phoneNumber`
			,`email`
			,`password`
			,`point`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{loginId}
			, #{name}
			, #{yyyymmdd}
			, #{phoneNumber}
			, #{email}
			, #{password}
			, #{point}
			, NOW()
			, NOW()
		)
	
	</insert>
	
	<select id="selectUserByLoginIdAndPassword" parameterType="map" resultType="com.megabox.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`name`
			,`yyyymmdd`
			,`phoneNumber`
			,`email`
			,`password`
			,`point`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId} AND `password` = #{password}
	</select>
	
	<select id="selectUser" parameterType="int" resultType="com.megabox.user.model.User">
		SELECT
			`id`
			,`loginId`
			,`name`
			,`yyyymmdd`
			,`phoneNumber`
			,`email`
			,`password`
			,`point`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{id}
	</select>
	
	<update id="updateUserPoint" parameterType="map">
 		UPDATE `user`
		SET
			`point` = #{point}
			, `updatedAt` = NOW()
		WHERE
			`id` = #{id}
 	
 	</update>
</mapper>
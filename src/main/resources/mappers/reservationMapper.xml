<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.megabox.reservation.dao.ReservationDAO">
 	<select id="selectReservationListByScheduleId" resultType="com.megabox.reservation.model.Reservation" parameterType="int">
 	SELECT
 		`id`
		,`userId`
		,`scheduleId`
		,`payment`
		,`usedPoint`
		, `adult`
		, `adolescent`
		, `senior`
		,`seatLocation`
		,`createdAt`
 	FROM
 		`reservation`
 	WHERE
 		`scheduleId` = #{scheduleId}
 	</select>
 
 	<insert id="insertReservation" parameterType="com.megabox.reservation.model.Reservation" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO `reservation`
 		(
	 		`userId`
			, `scheduleId`
			, `payment`
			, `usedPoint`
			, `adult`
			, `adolescent`
			, `senior`
			, `seatLocation`
			, `createdAt`
 		)
 		VALUES
 		(
	 		#{userId}
	 		, #{scheduleId}
	 		, #{payment}
	 		, #{usedPoint}
	 		, #{adult}
	 		, #{adolescent}
	 		, #{senior}
	 		, #{seatLocation}
	 		, NOW()
 		)
 	</insert>
 	
 	<select id="selectReservation" resultType="com.megabox.reservation.model.Reservation" parameterType="int">
	 	SELECT
	 		`id`
			,`userId`
			,`scheduleId`
			,`payment`
			,`usedPoint`
			, `adult`
			, `adolescent`
			, `senior`
			,`seatLocation`
			,`createdAt`
	 	FROM
	 		`reservation`
	 	WHERE
	 		`id` = #{id}
 	</select>
 	
 	<select id="selectReservationListByUserId" resultType="com.megabox.reservation.model.Reservation" parameterType="int">
 		SELECT
	 		`id`
			,`userId`
			,`scheduleId`
			,`payment`
			,`usedPoint`
			, `adult`
			, `adolescent`
			, `senior`
			,`seatLocation`
			,`createdAt`
	 	FROM
	 		`reservation`
	 	WHERE
	 		`userId` = #{userId}
 	</select>
 	
 	<delete id="deleteReservation" parameterType="int">
 		DELETE 
		FROM 
			`reservation`
		WHERE
			`id` = #{id}
 	</delete>
 </mapper>